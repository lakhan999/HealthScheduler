 <div> 
  <h2>Doctor</h2>
  <table>                         
    <tr>                          
      <th>Name</th>
      <th>Mobile-Number</th>
      <th>Address</th>
      <th>specialization</th>
      <th>consultation_fees</th>
      <th>experience</th>
      <%if current_user.role == "admin"%> 
      <th>Edit</th>
      <th>Delete</th>
      <%end%>
    </tr>   
    <tr>
      <td><%= @doctor.name %></td> 
      <td><%= @doctor.mobile_number %></td> 
      <td><%= @doctor.address %></td>  
      <td><%= @doctor.specialization %></td> 
      <td><%= @doctor.consultation_fees %></td> 
      <td><%= @doctor.experians %></td> 
      <%if current_user.role == "admin"%> 
      <td><%=link_to "Edit Doctors Profile",edit_doctor_path(@doctor)%>
      <td><%= button_to "Delete Doctor's Profile", doctor_path(@doctor), method: :delete, data: { confirm: "Are you sure?" } %>
</td> 
      <%end%>
    </tr>                      
  </table> 
  <br>
  <div class="dropdown">
    <button class="dropdown-button">Go-to</button>
      <div class="dropdown-content">
        <a class="dropdown-item"><%= link_to "Go back", "/"%></a>
        <a class="dropdown-item"><%= link_to "View Doctors Availability" ,doctor_doctor_availabilities_path(@doctor.id)%></a>
         <%if current_user.role == "admin"%> 
        <a class="dropdown-item"><%=link_to "Add Availability",new_doctor_doctor_availability_path(@doctor.id)%></a>
        <a class="dropdown-item"><%= link_to "Doctors Patients History" ,patients_history_doctor_path(@doctor.id)%></a>
        <a class="dropdown-item"><%= link_to "Doctors Appointment History" ,doctors_appointment_history_doctor_path(@doctor.id)%></a>
        <%end%>
      </div>
    </div>
  <br>
</div>
